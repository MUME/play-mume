{
    "compilerOptions": {
        "module": "commonjs", // Classic IIFE for now
        "target": "es5",
        "lib": [
            "ES5",
            // Both for jQuery
            "DOM",
            "ES2015.Iterable",
            // Iterable declares containers as generics through an interface, but lack the implementation
            "ES2015.Collection",
        ],
        "strict": true,
        "preserveConstEnums": true,
        "outDir": "built",
    },
    "include": [
        "src/**/*",
        "libs/*.d.ts",
    ],
}
