{
    "compilerOptions": {
        "module": "commonjs", // Classic IIFE for now
        "target": "es2021",
        "lib": [
            "es2021",
            "dom"
        ],
        "strict": true,
        "preserveConstEnums": true,
        "outDir": "built",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "libs/*.d.ts",
    ],
}
